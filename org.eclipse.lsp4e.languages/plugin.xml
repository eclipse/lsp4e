<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.text"
            file-extensions="cs"
            id="org.eclipse.lsp4e.languages.csharp"
            name="C Sharp"
            priority="normal">
      </content-type>
      <content-type
            base-type="org.eclipse.core.runtime.text"
            file-extensions="less"
            id="org.eclipse.lsp4e.languages.less"
            name="LESS"
            priority="normal">
      </content-type>
      <content-type
            base-type="org.eclipse.core.runtime.text"
            file-extensions="scss,sass"
            id="org.eclipse.lsp4e.languages.scss"
            name="SCSS/SASS"
            priority="normal">
      </content-type>
      <content-type
            base-type="org.eclipse.core.runtime.text"
            file-extensions="css"
            id="org.eclipse.lsp4e.languages.css"
            name="CSS"
            priority="normal">
      </content-type>
      <content-type
            base-type="org.eclipse.core.runtime.text"
            file-extensions="json"
            id="org.eclipse.lsp4e.languages.json"
            name="JSON"
            priority="normal">
      </content-type>
      <content-type
            base-type="org.eclipse.core.runtime.text"
            file-extensions="html"
            id="org.eclipse.lsp4e.languages.html"
            name="HTML"
            priority="normal">
      </content-type>
   </extension>
   <extension
         point="org.eclipse.ui.genericeditor.presentationReconcilers">
      <presentationReconciler
            class="org.eclipse.lsp4e.languages.csharp.CSharpKeywordsHighlighter"
            contentType="org.eclipse.lsp4e.languages.csharp">
      </presentationReconciler>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="org.eclipse.lsp4e.languages.InitializeLaunchConfigurations">
      </startup>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editorContentTypeBinding
            contentTypeId="org.eclipse.lsp4e.languages.csharp"
            editorId="org.eclipse.ui.genericeditor.GenericEditor">
      </editorContentTypeBinding>
      <editorContentTypeBinding
            contentTypeId="org.eclipse.lsp4e.languages.css"
            editorId="org.eclipse.ui.genericeditor.GenericEditor">
      </editorContentTypeBinding>
      <editorContentTypeBinding
            contentTypeId="org.eclipse.lsp4e.languages.less"
            editorId="org.eclipse.ui.genericeditor.GenericEditor">
      </editorContentTypeBinding>
      <editorContentTypeBinding
            contentTypeId="org.eclipse.lsp4e.languages.scss"
            editorId="org.eclipse.ui.genericeditor.GenericEditor">
      </editorContentTypeBinding>
      <editorContentTypeBinding
            contentTypeId="org.eclipse.lsp4e.languages.json"
            editorId="org.eclipse.ui.genericeditor.GenericEditor">
      </editorContentTypeBinding>
   </extension>
   <extension
         point="org.eclipse.lsp4e.languageServer">
      <server
            class="org.eclipse.lsp4e.languages.CSSLanguageServer"
            id="org.eclipse.lsp4e.languages.css"
            label="CSS/LESS/SCSS Language Server">
      </server>
      <contentTypeMapping
            contentType="org.eclipse.lsp4e.languages.css"
            id="org.eclipse.lsp4e.languages.css">
      </contentTypeMapping>
      <contentTypeMapping
            contentType="org.eclipse.lsp4e.languages.scss"
            id="org.eclipse.lsp4e.languages.css">
      </contentTypeMapping>
      <contentTypeMapping
            contentType="org.eclipse.lsp4e.languages.less"
            id="org.eclipse.lsp4e.languages.css">
      </contentTypeMapping>
      <server
            class="org.eclipse.lsp4e.languages.HTMLLanguageServer"
            id="org.eclipse.lsp4e.languages.html"
            label="HTML Language Server">
      </server>
      <contentTypeMapping
            contentType="org.eclipse.lsp4e.languages.html"
            id="org.eclipse.lsp4e.languages.html">
      </contentTypeMapping>
   </extension>
</plugin>
